{
  "compilerOptions": {
    "baseUrl": ".",
		"paths": {
      "@minecraft-ex/client": ["packages/@minecraft-ex/client/*"],
			"@minecraft-ex/server": ["packages/@minecraft-ex/server/*"],
      "@minecraft-ex/server-ui": ["packages/@minecraft-ex/server-ui"]
		},
    "outDir": "scripts/@minecraft-ex",
    "target": "esnext",
    "moduleResolution": "node",
    "module": "es2020",
    "allowJs": false,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "declaration": false,
    "sourceMap": false,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
